{
  "flows": [
    {
      "name": "進入機器",
      "description": "進入DFDC機器並等待載入",
      "enabled": true,
      "timeout": 15.0,
      "retry_count": 3,
      "config": {
        "wait_for_selector": ".game-container",
        "check_loading": true
      }
    },
    {
      "name": "視頻檢測",
      "description": "檢測DFDC視頻是否正常顯示",
      "enabled": true,
      "timeout": 10.0,
      "retry_count": 2,
      "config": {
        "selector": "canvas#game-canvas",
        "threshold": {
          "black": 10,
          "transparent": 10,
          "monochrome": 5
        }
      }
    },
    {
      "name": "按鈕測試",
      "description": "測試DFDC專屬按鈕",
      "enabled": true,
      "timeout": 5.0,
      "retry_count": 2,
      "config": {
        "buttons": ["SPIN", "BET", "AUTO"]
      }
    },
    {
      "name": "下注測試",
      "description": "測試DFDC下注功能",
      "enabled": true,
      "timeout": 10.0,
      "retry_count": 3,
      "config": {
        "bet_amounts": [10, 50, 100],
        "verify_balance_change": true
      }
    }
  ]
}






